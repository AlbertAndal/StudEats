APP_NAME=StudEats
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# For local MySQL development:
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=studeats
DB_USERNAME=root
DB_PASSWORD=

# For production PostgreSQL (Render), use DATABASE_URL instead and remove the individual DB_ variables above:
# DB_CONNECTION=pgsql
# DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Session Configuration
# Driver: 'database' recommended for distributed environments (Laravel Cloud, Render)
# Lifetime: Minutes before session expires (120 = 2 hours, 240 = 4 hours)
# Domain: null = auto-detect from request host (RECOMMENDED)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Production Session Settings (Laravel Cloud automatically configures these)
# SESSION_SECURE_COOKIE=true              # Force HTTPS cookies in production
# SESSION_SAME_SITE=lax                   # CSRF protection (lax|strict|none)
# SESSION_PARTITIONED_COOKIE=false        # Standard behavior
# SESSION_HTTP_ONLY=true                  # Prevent JavaScript access

# ⚠️ AVOID setting SESSION_DOMAIN explicitly unless required for cross-subdomain sharing
# Explicit domains like .laravel.cloud may be rejected by browsers due to PSL rules
# See COOKIE-SESSION-GUIDE.md for detailed explanation

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration - Replace with your actual mail settings
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS="noreply@studeats.local"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
